<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bottomNavViewSelectedItem</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greyText</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/statusBar</item>
        <item name="android:textColor">@color/textColor</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlHighlight">@color/onClickColor</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="searchViewStyle">@style/SearchView</item>
    </style>

    <!-- Toolbar theme. -->
    <style name="ToolBarStyle" parent="Theme.Go4Lunch">
        <item name="android:textColorPrimary">@color/toolbarItems</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:background">@color/toolbar</item>
        <item name="android:editTextColor">@android:color/black</item>
    </style>

    <!-- Login PopUps theme. -->
    <style name="PopUpStyle" parent="Theme.Go4Lunch">
        <item name="toolbarStyle">@style/ToolBarStyle</item>
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/greyText</item>
        <item name="android:textColorHint">@color/greyText</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="NavigationView" parent="Theme.Go4Lunch">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:background">@color/navViewBackground</item>
    </style>

    <style name="SearchView" parent="Theme.Go4Lunch">
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="closeIcon">@drawable/ic_closesearch</item>
        <item name="android:textColorHint">@color/greyText</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="queryBackground">@color/white</item>
        <item name="android:editTextColor">@android:color/black</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/bottomNavViewSelectedItem</item>
    </style>


</resources>