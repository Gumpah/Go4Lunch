<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/constraintLayout_restaurantListItem">

    <TextView
        android:id="@+id/textView_restaurantName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Restaurant's name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="@id/textView_restaurantClosingTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView_restaurantAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Restaurant's address"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/textView_restaurantClosingTime"
        app:layout_constraintStart_toStartOf="@id/textView_restaurantName"
        app:layout_constraintTop_toBottomOf="@id/textView_restaurantName"
        />

    <TextView
        android:id="@+id/textView_restaurantClosingTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Restaurant's closing time"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@id/imageView_star1"
        app:layout_constraintStart_toStartOf="@id/textView_restaurantName"
        app:layout_constraintTop_toBottomOf="@id/textView_restaurantAddress"
        />

    <TextView
        android:id="@+id/textView_restaurantDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="distance"
        android:textColor="@color/greyText"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/imageView_restaurantPhoto"
        app:layout_constraintEnd_toStartOf="@id/imageView_restaurantPhoto"
        app:layout_constraintBottom_toTopOf="@id/imageView_workmatesIcon"
        app:layout_constraintVertical_chainStyle="spread_inside"/>

    <ImageView
        android:id="@+id/imageView_restaurantPhoto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/contentDesc_photo_du_restaurant"
        tools:src="@drawable/backgroundblurred"/>

    <TextView
        android:id="@+id/textView_workmatesNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="(x)"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/textView_restaurantDistance"
        app:layout_constraintBottom_toBottomOf="@id/imageView_workmatesIcon"
        />

    <ImageView
        android:id="@+id/imageView_workmatesIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:tint="@color/black"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@id/textView_workmatesNumber"
        app:layout_constraintTop_toBottomOf="@id/textView_restaurantDistance"
        app:layout_constraintBottom_toTopOf="@id/imageView_star3"
        android:contentDescription="@string/contentDesc_icon_interested"
        android:src="@drawable/ic_baseline_person_outline_24"
        app:layout_constraintVertical_chainStyle="spread_inside"/>

    <ImageView
        android:id="@+id/imageView_star1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_baseline_star_24"
        app:tint="@color/star_yellow"
        android:visibility="invisible"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@id/imageView_star2"
        app:layout_constraintTop_toTopOf="@id/imageView_star2" />

    <ImageView
        android:id="@+id/imageView_star2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_baseline_star_24"
        app:tint="@color/star_yellow"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@id/imageView_star3"
        app:layout_constraintTop_toTopOf="@id/imageView_star3"/>

    <ImageView
        android:id="@+id/imageView_star3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_baseline_star_24"
        app:tint="@color/star_yellow"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/textView_restaurantDistance"
        app:layout_constraintTop_toBottomOf="@id/imageView_workmatesIcon"
        app:layout_constraintBottom_toBottomOf="@id/imageView_restaurantPhoto"
        app:layout_constraintVertical_chainStyle="spread_inside"/>



</androidx.constraintlayout.widget.ConstraintLayout>